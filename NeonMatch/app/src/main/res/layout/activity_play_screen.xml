<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matthewandjack.neonmatch.PlayScreen"
    android:weightSum="1"
    android:background="@drawable/gamelevel">

    <!---android:background="@drawable/level"-->

    <ImageButton
        android:id="@+id/greenButton"
        android:layout_width="133dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/green"
        android:onClick="greenPressed"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-6dp"
        android:background="@null"
        tools:layout_editor_absoluteY="339dp"
        tools:layout_editor_absoluteX="251dp" />

    <ImageButton
        android:id="@+id/yellowButton"
        android:layout_width="129dp"
        android:layout_height="174dp"
        android:layout_weight="0.23"
        app:srcCompat="@drawable/yellow"
        android:onClick="yellowPressed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-14dp"
        android:layout_marginRight="-9dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@null"
        tools:layout_editor_absoluteX="255dp" />

    <ImageButton
        android:id="@+id/blueButton"
        android:layout_width="122dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/blue"
        android:onClick="bluePressed"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:background="@null"
        tools:layout_editor_absoluteY="341dp" />

    <ImageButton
        android:id="@+id/redButton"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/red"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:background="@null" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="99dp"
        android:layout_height="27dp"
        android:text="Score: 0000"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="99dp"
        android:layout_height="23dp"
        android:text="Time: 0"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/scoreText" />

    <ImageView
        android:id="@+id/ball1"
        android:layout_width="112dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="112dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.274" />

    <ImageView
        android:id="@+id/ball3"
        android:layout_width="112dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.049" />


</android.support.constraint.ConstraintLayout>