<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matthewandjack.neonmatch.PlayScreen"
    android:background="@drawable/splashscreen">

    <ImageButton
        android:id="@+id/lonelyButton"
        android:layout_width="385dp"
        android:layout_height="565dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@null"
        android:onClick="tapped"/>

    <ImageView
        android:id="@+id/text"
        android:layout_width="344dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/touch_to_start"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lonelyButton"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lonelyButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.548" />
</android.support.constraint.ConstraintLayout>