<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="matthewandjack.neonmatch.MainMenu"
    android:background="@drawable/menutemp"
    android:scaleType="fitCenter"
    android:tileMode = "repeat">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="341dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/play_button"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        android:onClick="openPlayActivity"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/quit"
        android:layout_width="341dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/quit"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.315"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:onClick="exitApp"
        app:layout_constraintVertical_bias="0.493"
        app:layout_constraintBottom_toTopOf="@+id/leaderboard"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/leaderboard"
        android:layout_width="341dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/quit"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="53dp"
        app:layout_constraintHorizontal_bias="0.315"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:onClick="openLeaderboardActivity"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
